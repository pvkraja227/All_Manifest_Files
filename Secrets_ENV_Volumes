echo -n 'my-secret' | base64
bXktc2VjcmV0

vi secret.yaml

apiVersion: v1
kind: Secret
metadata:
  name: my-secret
type: Opaque
data:
  password: bXktc2VjcmV0

kubectl apply -f secret.yaml
kubectl get secrets
kubectl describe secret my-secret
o/p: value is not displayed
kubectl edit secret my-secret

echo -n 'bXktc2VjcmV0' | base64 -d
my-secret
