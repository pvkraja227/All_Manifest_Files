apiVersion: apps/v1
kind: Deployment
metadata:
  name: nginx-deployment
  labels:
    app: nginx
spec:
  replicas: 1
  selector:
    matchLabels:
      app: nginx
  template:
    metadata:
      labels:
        app: nginx
    spec:
      containers:
        - name: nginx
          image: nginx
          ports:
            - containerPort: 80
          env:
            - name: DB_PORT  # Environment variable name must not contain dashes
              valueFrom:
                secretKeyRef:
                  name: test-secret
                  key: password

kubectl apply -f deploy.yaml
kubectl get pods - 1
kubectl exec -it <pod name> -- /bin/bash
 -- - env | grep DB
o/p: DB_PORT=my-secret
